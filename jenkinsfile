pipeline{
      agent { label 'docker' }
      stages{
      stage('check out'){
                  steps{
                  sh "rm -rf hello-world-war"
                  sh "git clone https://github.com/sandy1791994/hello-world-war.git"
                  }
                  }
      stage('build'){
      steps{
      sh "pwd"
      sh "ls"
      sh "cd hello-world-war"
      sh "docker build -t anilpu3/docker:1.0 ."
      }
      }
       stage('publish'){
                  steps{
                        sh "docker login -u anilpu3 -p $unil@nil@321654"
                        sh "docker push anilpu3/docker:1.0"
                  }
            }
            stage('deploy'){
                  agent { label 'docker' }
                  steps{
                        sh "docker login -u anilpu3 -p $unil@nil@321654"
                        sh "docker pull anilpu3/docker:1.0"
                        //sh "docker rm -f trail1"
                        sh "docker run -d -p 8085:8080 --name trail1 anilpu3/docker:1.0"
                  }
            }
      }
      }
